@model WatchStore.Models.ViewModels.AdminOrdersIndexVm
@{
    ViewData["Title"] = "Đơn hàng";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<h3 class="mb-3">Danh sách đơn hàng</h3>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-12 col-md-5">
        <label class="form-label">Tìm kiếm</label>
        <input type="text" name="q" value="@Model.Q" class="form-control" placeholder="Mã đơn, tên user hoặc email..." />
    </div>
    <div class="col-12 col-md-4">
        <label class="form-label">Trạng thái</label>
        <select name="status" class="form-select">
            <option value="">-- Tất cả --</option>
            @{
                var statuses = new[] { "Pending", "Confirmed", "Paid", "Rejected" };
            }
            @foreach (var s in statuses)
            {
                <option value="@s" selected="@(Model.Status == s)">@s</option>
            }
        </select>
    </div>
    <div class="col-6 col-md-2">
        <label class="form-label">Mỗi trang</label>
        <select name="pageSize" class="form-select">
            @foreach (var s in new[] { 10, 20, 50 })
            {
                <option value="@s" selected="@(Model.PageSize == s)">@s</option>
            }
        </select>
    </div>
    <div class="col-6 col-md-1 d-grid">
        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Mã</th>
                    <th>Khách hàng</th>
                    <th>Email</th>
                    <th>Ngày đặt</th>
                    <th class="text-end">Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th style="width:180px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Any())
                {
                    <tr><td colspan="7"><div class="alert alert-info m-2">Không có đơn hàng.</div></td></tr>
                }
                else
                {
                    foreach (var o in Model.Items)
                    {
                        <tr>
                            <td>@o.Id</td>
                            <td>@o.User?.UserName</td>
                            <td>@o.User?.Email</td>
                            <td>@o.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">@o.TotalAmount.ToString("#,0") ₫</td>
                            <td>
                                <span class="badge bg-@(o.Status == "Pending" ? "warning" : o.Status == "Confirmed" ? "info" : o.Status == "Paid" ? "success" : "danger")">
                                    @o.Status
                                </span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@o.Id">Chi tiết</a>
                                @if (o.Status == "Pending")
                                {
                                    <form asp-action="Confirm" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@o.Id" />
                                        <button class="btn btn-sm btn-outline-success">Duyệt</button>
                                    </form>
                                    <form asp-action="Reject" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@o.Id" />
                                        <button class="btn btn-sm btn-outline-danger">Hủy</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @* Phân trang *@
    <div class="card-footer d-flex justify-content-between align-items-center">
        <div>
            Trang <strong>@Model.Page</strong> / @Model.TotalPages — Tổng: <strong>@Model.TotalItems</strong> đơn
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-q="@Model.Q" asp-route-status="@Model.Status" asp-route-page="@(Model.Page - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" asp-route-q="@Model.Q" asp-route-status="@Model.Status" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-q="@Model.Q" asp-route-status="@Model.Status" asp-route-page="@(Model.Page + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<style>
    :root {
        --bg1: #eef3ff;
        --bg2: #f7f1ff;
        --card: #ffffff;
        --primary: #2563eb;
        --primary-hover: #1e40af;
        --text: #0f172a;
        --muted: #64748b;
        --ring: rgba(37,99,235,.18);
        --radius: 14px;
    }

    html, body {
        height: 100%;
    }

    body {
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(1200px 600px at 10% 0%, var(--bg1), transparent 60%), radial-gradient(1100px 600px at 100% 100%, var(--bg2), transparent 60%), #f8fafc;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color: var(--text);
    }

    .shell {
        width: min(920px, 96vw);
        display: grid;
        grid-template-columns: 1.15fr 1fr;
        gap: 28px;
    }

    @@media (max-width: 880px) {
        .shell {
            grid-template-columns: 1fr;
        }
    }

    /* Brand panel (trái) */
    .brand {
        background: linear-gradient(145deg, #111827, #0b1020);
        color: #e5e7eb;
        border-radius: var(--radius);
        padding: 36px 30px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 30px 60px rgba(0,0,0,.20);
        min-height: 520px;
    }

        .brand h1 {
            font-size: clamp(24px, 3.2vw, 30px);
            margin: 0 0 6px;
            font-weight: 800;
            letter-spacing: .2px;
        }

        .brand p {
            color: #a3aed0;
            margin: 0;
        }

        .brand .hero {
            margin-top: 30px;
            border-radius: 12px;
            background: linear-gradient(135deg, rgba(59,130,246,.35), rgba(147,51,234,.35));
            backdrop-filter: blur(6px);
            padding: 24px;
            border: 1px solid rgba(255,255,255,.08);
        }

    /* Form card (phải) */
    .card {
        background: var(--card);
        border-radius: var(--radius);
        padding: 32px 28px;
        box-shadow: 0 2px 8px rgba(15,23,42,.05), 0 20px 60px rgba(15,23,42,.10);
        animation: fadeIn .45s ease;
    }

    .heading {
        margin: 0 0 8px;
        font-weight: 800;
        font-size: 28px;
        letter-spacing: .2px;
    }

    .sub {
        color: var(--muted);
        margin: 0 0 22px;
    }

    .form-label {
        font-size: .92rem;
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #111827;
    }

    .form-control {
        width: 100%;
        height: 46px;
        border-radius: 10px;
        border: 1px solid #e5e7eb;
        padding: 10px 12px;
        font-size: .96rem;
        transition: box-shadow .2s, border-color .2s, background-color .2s;
        background: #fbfdff;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px var(--ring);
            background: #fff;
        }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border: none;
        border-radius: 10px;
        padding: 12px 16px;
        font-weight: 700;
        cursor: pointer;
        width: 100%;
        background: var(--primary);
        color: white;
        transition: transform .06s ease, background-color .15s ease;
    }

        .btn:hover {
            background: var(--primary-hover);
        }

        .btn:active {
            transform: translateY(1px);
        }

    .links {
        margin-top: 18px;
        text-align: center;
        font-size: .95rem;
    }

        .links a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

            .links a:hover {
                text-decoration: underline;
                color: var(--primary-hover);
            }

    .val-summary {
        color: #ef4444;
        margin-bottom: 10px;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(14px)
    }

    to {
        opacity: 1;
        transform: translateY(0)
    }

    }
</style>

<div class="shell">
    <!-- Panel trái: brand -->
    <aside class="brand">
        <div>
            <h1>WatchStore</h1>
            <p>Đăng ký tài khoản để nhận ưu đãi độc quyền, theo dõi đơn hàng và quản lý bảo hành.</p>
            <div class="hero">
                <strong>Đặc quyền thành viên</strong>
                <p style="margin:6px 0 0; color:#e5e7eb;">Tặng phiếu bảo dưỡng lần đầu & giảm 10% phụ kiện.</p>
            </div>
        </div>
        <p style="font-size:.9rem;">© @DateTime.Now.Year WatchStore. All rights reserved.</p>
    </aside>

    <!-- Panel phải: form -->
    <section class="card">
        <h2 class="heading">Tạo tài khoản</h2>
        <p class="sub">Chào mừng bạn đến với WatchStore ⌚</p>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="val-summary"></div>

            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div style="height:12px"></div>

            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div style="height:12px"></div>

            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <div style="height:16px"></div>
            <button type="submit" class="btn">Đăng ký</button>

            <div class="links">
                <p>
                    Đã có tài khoản?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<WatchStore.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_LayoutHeader" />

<!-- CSS trực tiếp -->
<style>
    .card-img-top {
        transition: transform 0.5s ease;
        object-fit: cover;
    }

    .card:hover .card-img-top {
        transform: scale(1.5);
    }

    .card {
        overflow: hidden;
    }
</style>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        @{
                            var img = string.IsNullOrWhiteSpace(item.ImageUrl)
                            ? "/images/placeholder.png"
                            : item.ImageUrl;
                        }
                        <img src="@img" alt="@item.Name" class="card-img-top" />

                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@item.Name</h5>
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <span>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Price)</span>
                            </div>
                        </div>
                        <div align="center">
                            <!-- Product actions-->
                            <form asp-controller="Products" asp-action="Details" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button class="btn btn-primary">Xem chi tiết</button>
                            </form>
                        </div>
                        <div align="center">
                            <!-- Product actions-->
                            <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.Id" />
                                <button class="btn btn-primary">Thêm vào giỏ hàng</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

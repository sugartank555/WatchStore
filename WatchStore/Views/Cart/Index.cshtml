@model List<WatchStore.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    decimal total = (decimal)(ViewBag.Total ?? 0m);
    string PriceVN(decimal p) => string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} ₫", p);
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-cart3"></i> @ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info p-4 rounded shadow-sm">
            <i class="bi bi-info-circle"></i> Giỏ hàng của bạn đang trống.
        </div>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Index">
            <i class="bi bi-plus-circle"></i> Thêm sản phẩm
        </a>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-end">Giá</th>
                                <th class="text-center" style="width:160px">Số lượng</th>
                                <th class="text-end">Tạm tính</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var it in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@it.Product.Name</div>
                                    </td>
                                    <td class="text-end">@PriceVN(it.UnitPrice)</td>
                                    <td>
                                        <form asp-action="Update" method="post" class="d-flex gap-2 justify-content-center">
                                            <input type="hidden" name="cartItemId" value="@it.Id" />
                                            <input class="form-control form-control-sm text-center"
                                                   type="number" name="quantity" min="0" value="@it.Quantity" style="max-width:70px" />
                                            <button class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="text-end">@PriceVN(it.UnitPrice * it.Quantity)</td>
                                    <td class="text-end">
                                        <form asp-action="Remove" method="post" class="d-inline">
                                            <input type="hidden" name="cartItemId" value="@it.Id" />
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng:</th>
                                <th class="text-end text-primary fs-5">@PriceVN(total)</th>
                                <th class="text-end">
                                    <form asp-action="Clear" method="post" class="d-inline">
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-x-circle"></i> Xóa giỏ
                                        </button>
                                    </form>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-outline-dark" asp-controller="Products" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Thêm sản phẩm khác
            </a>
            <a class="btn btn-success" asp-controller="Checkout" asp-action="Index">
                <i class="bi bi-credit-card"></i> Tiến hành thanh toán
            </a>
        </div>
    }
</div>

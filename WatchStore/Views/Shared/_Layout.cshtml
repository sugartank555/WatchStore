@using Microsoft.AspNetCore.Identity
@*
  _Layout.cshtml (đã làm sạch & format)
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sugar Watch</title>

    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Sugar Watch</a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                    </li>

                    <li><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">All Products</a></li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MyOrders" asp-action="Index">Đơn hàng của tôi</a>
                        </li>
                    }
                </ul>

                <!-- Right -->
                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-outline-dark position-relative" asp-area="" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart-fill me-1"></i> Giỏ hàng
                        @* Nếu bạn có đếm số lượng trong ViewBag.CartCount *@
                        @if ((ViewBag.CartCount ?? 0) > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark">
                                @ViewBag.CartCount
                                <span class="visually-hidden">items in cart</span>
                            </span>
                        }
                    </a>

                    @* Đăng nhập/Đăng ký / Hello, user *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Body -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row gy-4">
                <!-- Cột 1: Logo + mô tả -->
                <div class="col-md-4">
                    <h5 class="fw-bold text-white mb-3">Sugar Watch</h5>
                    <p class="small text-secondary">
                        Cửa hàng đồng hồ cao cấp dành cho quý ông hiện đại.
                        Cam kết sản phẩm chính hãng, bảo hành toàn quốc.
                    </p>
                </div>

                <!-- Cột 2: Liên kết nhanh -->
                <div class="col-md-2">
                    <h6 class="fw-semibold text-uppercase">Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-area="" asp-controller="Products" asp-action="Index" class="text-decoration-none text-secondary">Sản phẩm</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-secondary">Giới thiệu</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact" class="text-decoration-none text-secondary">Liên hệ</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none text-secondary">Tài khoản</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Liên hệ -->
                <div class="col-md-3">
                    <h6 class="fw-semibold text-uppercase">Liên hệ</h6>
                    <ul class="list-unstyled small text-secondary">
                        <li><i class="bi bi-geo-alt"></i> 123 Nguyễn Trãi, Hà Nội</li>
                        <li><i class="bi bi-telephone"></i> 0123 456 789</li>
                        <li><i class="bi bi-envelope"></i> support@gwatch.local</li>
                    </ul>
                </div>

                <!-- Cột 4: Mạng xã hội -->
                <div class="col-md-3">
                    <h6 class="fw-semibold text-uppercase">Kết nối</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary mt-4" />

            <!-- Dòng bản quyền -->
            <div class="text-center small text-secondary">
                © @DateTime.Now.Year Sugar Watch. All rights reserved.
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@using Microsoft.AspNetCore.Identity
@*
 
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sugar Watch</title>

    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        .navbar-glass {
            background-color: color-mix(in srgb, var(--bs-body-bg) 70%, transparent);
            backdrop-filter: saturate(180%) blur(14px)
        }

            .navbar-glass .nav-link {
                font-weight: 600
            }

                .navbar-glass .nav-link:hover {
                    color: var(--bs-primary)
                }

        .btn-icon {
            --size: 40px;
            width: var(--size);
            height: var(--size);
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            justify-content: center
        }

        .cart-badge {
            position: absolute;
            top: -6px;
            right: -6px
        }

        .nav-search .form-control:focus {
            box-shadow: 0 0 0 .2rem rgba(13,110,253,.15)
        }
        
            border-bottom: 1px solid var(--bs-border-color)
        }

        }
    </style>
</head>
<body>
    

    <!-- Header / Navbar Glass -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-glass border-bottom">
        <div class="container px-3">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-watch"></i><span class="fw-bold">Sugar Watch</span>
            </a>

            <!-- Menu trái -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                </ul>

                <!-- Form tìm kiếm -->
                <form method="get" asp-controller="Products" asp-action="Index" class="d-none d-lg-flex me-3 nav-search" role="search">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-transparent border-end-0"><i class="bi bi-search"></i></span>
                        <input id="qHeader" name="q" class="form-control border-start-0" type="search" placeholder="Tìm đồng hồ…" />
                    </div>
                </form>

                <!-- Phần đăng nhập/đăng xuất -->
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>


    <!-- Body -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row gy-4">
                <!-- Cột 1: Logo + mô tả -->
                <div class="col-md-4">
                    <h5 class="fw-bold text-white mb-3">Sugar Watch</h5>
                    <p class="small text-secondary">
                        Cửa hàng đồng hồ cao cấp dành cho quý ông hiện đại.
                        Cam kết sản phẩm chính hãng, bảo hành toàn quốc.
                    </p>
                </div>

                <!-- Cột 2: Liên kết nhanh -->
                <div class="col-md-2">
                    <h6 class="fw-semibold text-uppercase">Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-area="" asp-controller="Products" asp-action="Index" class="text-decoration-none text-secondary">Sản phẩm</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-secondary">Giới thiệu</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact" class="text-decoration-none text-secondary">Liên hệ</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none text-secondary">Tài khoản</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Liên hệ -->
                <div class="col-md-3">
                    <h6 class="fw-semibold text-uppercase">Liên hệ</h6>
                    <ul class="list-unstyled small text-secondary">
                        <li><i class="bi bi-geo-alt"></i> 123 Nguyễn Trãi, Hà Nội</li>
                        <li><i class="bi bi-telephone"></i> 0123 456 789</li>
                        <li><i class="bi bi-envelope"></i> support@gwatch.local</li>
                    </ul>
                </div>

                <!-- Cột 4: Mạng xã hội -->
                <div class="col-md-3">
                    <h6 class="fw-semibold text-uppercase">Kết nối</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary mt-4" />

            <!-- Dòng bản quyền -->
            <div class="text-center small text-secondary">
                © @DateTime.Now.Year Sugar Watch. All rights reserved.
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
